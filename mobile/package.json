{
  "name": "@origin/mobile",
  "author": "Origin Protocol Inc",
  "license": "MIT",
  "repository": "https://github.com/OriginProtocol/origin/mobile",
  "version": "0.13.3",
  "scripts": {
    "android": "react-native run-android",
    "clean": "git clean -fdX .",
    "ios": "react-native run-ios",
    "lint": "eslint . && npm run prettier:check",
    "postinstall": "./postinstall.sh",
    "prettier": "prettier --write *.js \"**/*.js\"",
    "prettier:check": "prettier -c *.js \"**/*.js\"",
    "start": "react-native start",
    "test": "jest",
    "fbt:manifest": "node -r @babel/register node_modules/babel-plugin-fbt/bin/manifest --src src",
    "fbt:collect": "node -r @babel/register node_modules/babel-plugin-fbt/bin/collectFBT --manifest --pretty < .src_manifest.json > .source_strings.json",
    "fbt:translate": "node  -r @babel/register node_modules/babel-plugin-fbt/bin/translate.js --translations translation/fbt/*.json --jenkins --pretty > .translated_fbts.json",
    "fbt:clean": "rm .enum_manifest.json .src_manifest.json .source_strings.json .translated_fbts.json translation/fbt/*.json 2&> /dev/null || exit 0",
    "translate": "npm run fbt:manifest && npm run fbt:collect && node translation/scripts/fbtToCrowdin && node translation/scripts/crowdinToFbt && npm run fbt:translate && node translation/scripts/splitTranslations && cp .enum_manifest.json translation/fbt/.enum_manifest.json",
    "translate:proof": "npm run fbt:manifest && npm run fbt:collect && node translation/scripts/fbtToCrowdin && node translation/scripts/crowdinToFbt proof && npm run fbt:translate && node translation/scripts/splitTranslations && cp .enum_manifest.json translation/fbt/.enum_manifest.json"
  },
  "jest": {
    "preset": "react-native"
  },
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-new-target": "^7.4.4",
    "@babel/register": "^7.4.4",
    "acorn": "^6.1.1",
    "babel-plugin-fbt": "^0.9.12",
    "babel-plugin-fbt-runtime": "^0.9.1",
    "babel-plugin-inline-dotenv": "^1.3.3",
    "compare-versions": "^3.5.0",
    "core-js": "^3.1.4",
    "cross-fetch": "^3.0.4",
    "eslint": "^6.0.1",
    "ethers": "^4.0.32",
    "fbt-runtime": "^0.9.4",
    "graphql-tag": "^2.10.1",
    "install-local": "^1.0.0",
    "lodash.get": "^4.4.2",
    "metro-react-native-babel-preset": "^0.54.1",
    "myetherwallet-blockies": "^0.1.1",
    "node-libs-react-native": "^1.0.3",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-devtools-core": "^3.6.1",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.12.0",
    "react-native": "^0.59.9",
    "react-native-android-open-settings": "^1.3.0",
    "react-native-camera": "^2.11.0",
    "react-native-check-box": "^2.1.7",
    "react-native-device-info": "^2.1.3",
    "react-native-gesture-handler": "^1.3.0",
    "react-native-image-picker": "^0.28.1",
    "react-native-image-resizer": "^1.0.1",
    "react-native-localize": "^1.1.3",
    "react-native-permissions": "^1.1.1",
    "react-native-picker-select": "^6.2.0",
    "react-native-push-notification": "^3.1.3",
    "react-native-randombytes": "^3.5.3",
    "react-native-safe-area-view": "^0.14.5",
    "react-native-sentry": "^0.43.2",
    "react-native-test-flight": "^1.0.1",
    "react-native-touch-id": "^4.4.1",
    "react-native-user-agent": "^1.0.4",
    "react-native-webview": "^5.12.0",
    "react-navigation": "^3.11.0",
    "react-navigation-backhandler": "^1.3.2",
    "react-redux": "^7.1.0",
    "react-test-renderer": "16.8.6",
    "redux": "^4.0.1",
    "redux-persist": "^5.10.0",
    "redux-persist-transform-encrypt": "^2.0.1",
    "redux-thunk": "^2.3.0",
    "rn-nodeify": "^10.0.1",
    "uuid": "^3.3.2",
    "vm-browserify": "^1.1.0",
    "web3": "1.0.0-beta.34",
    "whatwg-url": "^7.0.0"
  },
  "localDependencies": {
    "@origin/contracts": "../packages/contracts",
    "@origin/eventsource": "../packages/eventsource",
    "@origin/event-cache": "../packages/event-cache",
    "@origin/graphql": "../packages/graphql",
    "@origin/ipfs": "../packages/ipfs",
    "@origin/messaging-client": "../packages/messaging-client",
    "@origin/services": "../packages/services",
    "@origin/validator": "../packages/validator",
    "@origin/mobile-bridge": "../packages/mobile-bridge",
    "@origin/web3-provider": "../packages/web3-provider"
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "detox": "^13.0.1",
    "jest": "^24.8.0"
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/OriginCatcher/Build/Products/Debug-iphonesimulator/OriginCatcher.app",
        "build": "xcodebuild -project ios/OriginCatcher.xcodeproj -scheme OriginCatcher -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 8"
      }
    },
    "runner-config": "e2e/config.json",
    "test-runner": "jest"
  }
}
